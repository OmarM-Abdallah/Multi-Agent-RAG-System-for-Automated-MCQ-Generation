# Groq API Key (Required) - Get free at https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# LLM Provider
LLM_PROVIDER=groq

# Application Settings
APP_NAME=RAG Question Generator
APP_VERSION=1.0.0
DEBUG=False

# Vector Database Settings
VECTOR_DB_PATH=./vectordb
COLLECTION_NAME=documents
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# RAG Settings
RETRIEVAL_TOP_K=5

# Embedding Model (Free local model)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# LLM Settings (Groq)
LLM_MODEL=llama-3.3-70b-versatile
LLM_TEMPERATURE=0.7
MAX_TOKENS=2000

# Question Generation Settings
NUM_QUESTIONS_PER_REQUEST=5
